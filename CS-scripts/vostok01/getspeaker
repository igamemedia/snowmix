#!/bin/bash

date=`date`
basename=`basename $0`
pid_dir=/var/run/stream
pid_file=$pid_dir/$basename.$$
echo $$ >$pid_file
echo $date >>$pid_file
echo "command : $0 $*" >>$pid_file

function on_error {
	echo "Error. Usage : $0 raw|vorbis"
	exit 1
}

if [ $# != 1 ] ; then on_error
fi

if [ $1 != raw -a $1 != vorbis ] ; then on_error
fi

gstlaunch=`which gst-launch-1.0`
if [ X$gstlaunch != X ] ; then
  VIDEOCONVERT=videoconvert
  VIDEO=video/x-raw
  AUDIO=audio/x-raw
  vfid=string
  afid="format=(string)S16LE, "
else
  gstlaunch=`which gst-launch-0.10`
  if [ X$gstlaunch != X ] ; then
    VIDEOCONVERT=ffmpegcolorspace
    VIDEO=video/x-raw-rgb
    AUDIO=audio/x-raw-int
    vfid=fourcc
    afid=""
  else
    echo "Could not find gst-launch-1.0 or gst-launch-0.10. Stopping"
    exit
  fi
fi



VORBIS44100C1='application/x-rtp, media=(string)audio, clock-rate=(int)44100, encoding-name=(string)VORBIS, encoding-params=(string)1, configuration=(string)\"\\=\\=\", payload=(int)96'


server=81.7.134.69
rawserverport=8116
vorbisserverport=8117
rawmixeraudioport=9116
vorbismixeraudioport=9116
channels=1
rate=44100


INAUDIOFORMAT=$AUDIO', '$afid' endianness=(int)1234, signed=(boolean)true, width=(int)16, depth=(int)16, rate=(int)'$rate', channels=(int)'$channels
OUTAUDIOFORMAT=$AUDIO', '$afid' endianness=(int)1234, signed=(boolean)true, width=(int)16, depth=(int)16, rate=(int)'$rate', channels=(int)'$channels


while true ; do

	if [ $1 = raw ] ; then
		echo "Connecting to Borgergade server $server raw audio at port $rawserverport"
		$gstlaunch -v tcpclientsrc host=$server port=$rawserverport ! \
			queue			! \
			$INAUDIOFORMAT		! \
			audioconvert		! \
			$OUTAUDIOFORMAT		! \
			tcpclientsink host=127.0.0.1 port=$rawmixeraudioport
	else
		echo "Connecting to Borgergade server $server vorbis audio at port $rawserverport"
		$gstlaunch -v tcpclientsrc host=$server port=$vorbisserverport ! \
			queue			! \
			capsfilter caps="$VORBIS44100C1" ! \
			rtpvorbisdepay		! \
			rtpvorbispay		! \
			queue ! \
			udpsink host=127.0.0.1 port=$vorbismixeraudioport 

	fi
	echo "Connection failed"
	sleep 5
done
			"$VORBIS44100C1"	! \
